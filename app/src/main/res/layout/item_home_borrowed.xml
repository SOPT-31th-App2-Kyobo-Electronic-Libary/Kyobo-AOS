<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_home_borrowed"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_dummy_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_borrowed"
        style="@style/TextDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="오직 두 사람"
        android:textAppearance="@style/S2"
        android:textColor="@color/kyobo_black"
        app:layout_constraintEnd_toEndOf="@+id/iv_home_borrowed"
        app:layout_constraintStart_toStartOf="@+id/iv_home_borrowed"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_borrowed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_home_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_home_btn_return"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="33dp"
        android:paddingTop="3dp"
        android:paddingBottom="4dp"
        android:text="반납"
        android:textColor="@color/kyobo_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_home_borrowed"
        app:layout_constraintStart_toStartOf="@+id/iv_home_borrowed"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_borrowed" />

    <TextView
        android:id="@+id/tv_home_borrowed_days"
        style="@style/TextDefaultStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_home_tag_days"
        android:paddingHorizontal="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:text="D- 2"
        android:textAppearance="@style/B3"
        android:textColor="@color/kyobo_white"
        app:layout_constraintStart_toStartOf="@+id/iv_home_borrowed"
        app:layout_constraintTop_toTopOf="@+id/iv_home_borrowed" />

</androidx.constraintlayout.widget.ConstraintLayout>
