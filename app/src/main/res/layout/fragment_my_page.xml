<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view_home_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/kyobo_white"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_home_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/selector_home_btn_favorite"
        app:layout_constraintBottom_toBottomOf="@+id/view_home_top"
        app:layout_constraintStart_toStartOf="@+id/view_home_top"
        app:layout_constraintTop_toTopOf="@+id/view_home_top" />

    <TextView
        android:id="@+id/tv_home_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="홍익대학교"
        android:textAppearance="@style/H3"
        android:textColor="@color/kyobo_black"
        app:layout_constraintBottom_toBottomOf="@+id/view_home_top"
        app:layout_constraintStart_toEndOf="@+id/btn_home_fav"
        app:layout_constraintTop_toTopOf="@+id/view_home_top" />

    <ImageButton
        android:id="@+id/btn_my_page_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_home_search"
        app:layout_constraintBottom_toBottomOf="@+id/view_home_top"
        app:layout_constraintEnd_toStartOf="@+id/btn_my_page_setting"
        app:layout_constraintTop_toTopOf="@+id/view_home_top" />

    <ImageButton
        android:id="@+id/btn_my_page_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:background="@drawable/ic_my_page_setting"
        app:layout_constraintBottom_toBottomOf="@+id/view_home_top"
        app:layout_constraintEnd_toEndOf="@+id/view_home_top"
        app:layout_constraintTop_toTopOf="@+id/view_home_top" />

    <TextView
        android:id="@+id/tv_my_page_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="26dp"
        style="@style/TextDefaultStyle"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textColor="@color/kyobo_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_home_top"
        android:text="B946234 진서연" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님"
        app:layout_constraintTop_toBottomOf="@+id/view_home_top"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toEndOf="@id/tv_my_page_user_info"
        style="@style/TextDefaultStyle"
        android:fontFamily="@font/noto_sans_kr"
        android:textColor="@color/kyobo_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_my_page_user_univ"
        style="@style/TextDefaultStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="6dp"
        android:text="홍익대학교 소속"
        android:textAppearance="@style/S2"
        android:textColor="@color/kyobo_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_page_user_info" />

    <ImageButton
        android:id="@+id/btn_my_page_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_my_page_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_home_top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_my_page_logout"
        app:layout_constraintBottom_toBottomOf="@+id/btn_my_page_logout"
        app:layout_constraintEnd_toEndOf="@+id/btn_my_page_logout"
        app:layout_constraintStart_toStartOf="@+id/btn_my_page_logout"
        app:layout_constraintTop_toTopOf="@id/btn_my_page_logout" />

    <TextView
        android:id="@+id/tv_my_page_borrowed_list"
        style="@style/TextDefaultStyle"
        android:textAppearance="@style/H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대출 목록"
        android:textColor="@color/kyobo_black" />

    <TextView
        android:id="@+id/tv_my_page_reserve_list"
        style="@style/TextDefaultStyle"
        android:textAppearance="@style/S1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약 목록"
        android:textColor="@color/kyobo_gray" />

    <TextView
        android:id="@+id/tv_my_page_like_list"
        style="@style/TextDefaultStyle"
        android:textAppearance="@style/S1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="찜한 도서"
        android:textColor="@color/kyobo_gray" />

    <TextView
        android:id="@+id/tv_my_page_history"
        style="@style/TextDefaultStyle"
        android:textAppearance="@style/S1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대출 이력"
        android:textColor="@color/kyobo_gray" />

    <TextView
        android:id="@+id/tv_my_page_review"
        style="@style/TextDefaultStyle"
        android:textAppearance="@style/S1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 내역"
        android:textColor="@color/kyobo_gray" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_my_page_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:constraint_referenced_ids="tv_my_page_borrowed_list,
            tv_my_page_reserve_list, tv_my_page_like_list,
            tv_my_page_history, tv_my_page_review"
        app:flow_horizontalGap="10dp"
        app:flow_horizontalStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_page_user_univ" />

    <ImageButton
        android:id="@+id/btn_dropdown_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_home_dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="19.5dp"
        app:layout_constraintTop_toBottomOf="@id/flow_my_page_tab"
        android:layout_marginTop="27dp"/>

    <TextView
        android:id="@+id/tv_dropdown_my_date"
        style="@style/TextDefaultStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="대출일자순"
        android:textAppearance="@style/B3"
        android:textColor="@color/kyobo_dark_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn_dropdown_my"
        app:layout_constraintEnd_toStartOf="@+id/btn_dropdown_my"
        app:layout_constraintTop_toTopOf="@+id/btn_dropdown_my" />

    <ImageButton
        android:id="@+id/btn_dropdown_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_my_page_oval"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dropdown_my_date"
        app:layout_constraintEnd_toStartOf="@+id/tv_dropdown_my_date"
        app:layout_constraintTop_toTopOf="@+id/tv_dropdown_my_date" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextDefaultStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:text="연도별"
        android:textAppearance="@style/B3"
        android:textColor="@color/kyobo_dark_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn_dropdown_books"
        app:layout_constraintEnd_toEndOf="@+id/btn_dropdown_books"
        app:layout_constraintTop_toTopOf="@+id/btn_dropdown_books" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="8dp"
        android:layout_height="4dp"
        android:layout_marginLeft="9dp"
        android:background="@drawable/ic_my_page_dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/btn_dropdown_books"
        app:layout_constraintStart_toStartOf="@+id/btn_dropdown_books"
        app:layout_constraintTop_toTopOf="@+id/btn_dropdown_books" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_page_borrowed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dropdown_books"
        tools:listitem="@layout/item_my_page_borrowed" />

</androidx.constraintlayout.widget.ConstraintLayout>
